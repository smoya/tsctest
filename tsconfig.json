{
    "compilerOptions": {
      "outDir": "./esm",
      "baseUrl": "./src",
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
    },
    "include": [
      "src"
    ]
  }